pipeline{
    agent any
    environment{
        DATABASE_URI = credentials("DATABASE_URI")
        replicas = 10
        app_version = '1.0'
    }
    stages{
        stage("Testing"){
            steps{
                sh "bash jenkins/script/test.sh"
                }
            }
        
        stage("Build & Push"){
            steps{
                    sh "docker-compose build --parallel && docker-compose push"
                    sh "docker system prune -af"
                    }
                }
            
        
        stage("Config Management (ansible)"){
            steps{
                sh "sudo su jenkins cd ansible && /home/jenkins/bin/ansible-playbook -i inventory playbook.yaml"
            }
        }
        stage("Deploy"){
            steps{
                sh "bash jenkins/script/deploy.sh"
            }
        }
    }
}
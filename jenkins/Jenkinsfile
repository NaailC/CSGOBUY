pipeline{
    agent any
    environment{
        DATABASE_URI = credentials("DATABASE_URI")
        docker_credentials = credentials("docker-hub-credentials")
        replicas = 10
        app_version = '1.0'
    }
    stages{
    stage("Testing"){
        steps{
            sh "bash jenkins/script/test.sh"
        }
    }
        
        stage("Build & Push"){
            steps{
                    sh "docker-compose build --parallel && docker-compose push"
                    sh "docker system prune -af"
                    }
                }
            
        
        stage("Config Management (ansible)"){
            steps{
                sh "cd ansible && /home/jenkins/.local/bin/ansible-playbook -i inventory playbook.yaml"
            }
        }
        stage("Deploy"){
            steps{
                sh "bash jenkins/script/deploy.sh"
            }
        }
    }
}
pipeline{
        agent any
        environment {
            app_version = 'v1'
            rollback = 'true'
        }
        stages{
            stage('Testing'){
                steps{
                    script{
                        if (env.rollback == 'false'){
                            sh 'bash jenkins/shell-script/test.sh'
                        }
                    }
                }
            }
            stage('Build + Push'){
                steps{
                    script{
                        if (env.rollback == 'false'){
                            sh 'bash jenkins/script/compose.sh'                            
                        }
                    }
                }
            
            
            stage('config management'){
                steps{
                    script{
                        if (env.rollback == 'false'){
                            // ansible
                            // docker & jenkins login
                            
                        }
                    }
                }
            }
            stage('Deploy App'){
                steps{
                    sh "docker-compose pull && docker-compose up -d"
                }
            }
        }
}